model Vehicle {
  id            Int      @id @default(autoincrement())
  name          String
  description   String
  price         Float
  primaryImage  String   // Path to primary image
  secondaryImage   String
  availableQty  Int
  manufacture     String   // Manufacture should be chosen from a predefined set of values
  model           String   // Model of the vehicle
}

